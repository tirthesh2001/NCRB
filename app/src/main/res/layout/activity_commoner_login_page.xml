<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    tools:context=".Commoner_Login_Page">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter Full Name"
        android:id="@+id/comm_name_edittxt"
        android:textAlignment="center"
        android:textColorHint="#797985"
        android:background="@drawable/edittxt_policelogin"
        android:layout_marginTop="350dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter Phone Number"
        android:layout_below="@+id/comm_name_edittxt"
        android:id="@+id/comm_no_edittxt"
        android:textAlignment="center"
        android:textColorHint="#797985"
        android:background="@drawable/edittxt_policelogin"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comm_no_edittxt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/btn_commoner_Login"
        android:textColor="@color/white"
        android:text="Login"
        android:background="@drawable/btn_bg_homepage"/>

</RelativeLayout>